<Panel xmlns="https://github.com/avaloniaui"
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
       x:Class="MINE.UI.FadeInAnimationComponent"
>
   
    <Panel.Styles>
        <Style Selector="Border.slideup">
            <Style.Animations>
                <Animation 
                    Duration="0:0:2.0"
                    IterationCount="1"
                > 
                    <KeyFrame Cue="0%">
                        <Setter Property="Margin" Value="0,0,0,0"/>
                    </KeyFrame>
                    <KeyFrame Cue="100%">
                        <Setter Property="Margin" Value="0,0,0,2000"/>
                    </KeyFrame>
                </Animation>
            </Style.Animations>
        </Style>
    </Panel.Styles>
    <Border 
        Classes="slideup"
        Background="Black"
        HorizontalAlignment="Stretch">
